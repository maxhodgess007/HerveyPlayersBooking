@{
    ViewData["Title"] = "E-Ticket Sent";
}

<div style="border:2px solid black; padding:20px; width:500px; margin:30px auto; text-align:center; font-family:sans-serif;">
    <h2>Your E-Ticket Is On The Way!</h2>

    <p style="margin:20px 0;">
        A confirmation email with your ticket details will be sent to the email address you provided.
    </p>

    <hr style="margin:20px 0;" />

    <p>
        Need to update your booking date?
        <a asp-controller="Booking" asp-action="ManageBookings">Manage Bookings</a>
    </p>

    <p>
        Make another booking:
        <a asp-controller="Booking" asp-action="Create">Book Again</a>
    </p>

    <p>
        Return to home page:
        <a asp-controller="Home" asp-action="Index">Home</a>
    </p>
</div>
