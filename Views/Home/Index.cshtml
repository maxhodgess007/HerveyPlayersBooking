@{
    ViewData["Title"] = "Home Page";
}

<style>
    body { font-family: Arial, sans-serif; }
    header { text-align: center; background-color: #222; color: white; padding: 20px; }
    .container { display: flex; justify-content: space-around; margin-top: 30px; }
    .show { background: white; padding: 20px; border: 1px solid #ccc; width: 30%; box-shadow: 2px 2px 10px rgba(0,0,0,0.1); }
    .show h2 { color: #333; }
    .show p { color: #666; }
    .button { display: inline-block; padding: 10px 20px; background-color: #0077cc; color: white; text-decoration: none; border-radius: 4px; margin-top: 10px; }
    .button:disabled { background-color: grey; }
</style>

<header>
    <h1>The Hervey Players</h1>
    <p>Welcome to Hervey Bay's Community Theatre</p>
</header>

<div class="container">
    <div class="show">
        <h2>Prodigy</h2>
        <p>A gripping psychological thriller about a young girl with dangerous mental powers, targeted by the government for euthanasia.</p>
        <a href="/Booking/Create" class="button">Book Now</a>
    </div>
    <div class="show">
        <h2>Here Comes the Wind</h2>
        <p>A moving drama about family, hope, and resilience.</p>
        <button class="button" disabled>Bookings Closed</button>
    </div>
    <div class="show">
        <h2>What Dreams May Come</h2>
        <p>A heartfelt exploration of life, death, and dreams.</p>
        <button class="button" disabled>Bookings Closed</button>
    </div>
</div>